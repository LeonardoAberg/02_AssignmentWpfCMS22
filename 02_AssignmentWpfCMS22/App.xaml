<Application x:Class="_02_AssignmentWpfCMS22.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_02_AssignmentWpfCMS22"
             StartupUri="MainWindow.xaml">
    <!-- Min extremt snygga style-del. Avstånd, textmodifiering i form av storlek och tjocklek samt olika kulörer -->
    <Application.Resources>
        <Style x:Key="label" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 0 2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style x:Key="field" TargetType="TextBox">
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="0 0 0 3"/>
            <Setter Property="FontWeight" Value="Regular"/>
        </Style>
        <Style x:Key="window" TargetType="Grid">
            <Setter Property="Background" Value="DarkGray"/>
        </Style>
        <Style x:Key="addButton" TargetType="Button">
            <Setter Property="Background" Value="#222424"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
